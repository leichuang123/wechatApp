.toast {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    z-index: 999;
    min-width: 100px;
    background-color: rgba(0, 0, 0, 0.7);
    border-radius: 3px;
    color: #fff;
    font-size: 13px;
    padding: 8px;
}

.toast-image {
    width: 50px;
    height: 50px;
    vertical-align: middle;
    color: #fff;
}