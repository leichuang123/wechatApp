.keyboard {
    z-index: 9999;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.52);
}
.goodWindow {
    width: 100%;
    position: absolute;
    left: 0;
    bottom: 0;
    border-radius: 10px 10px 0px 0px;
    color: rgba(16, 16, 16, 1);
    font-size: 14px;
    background-color: #ffffff;
    overflow: hidden;
    height: 250px;
}
.closeIcon {
    position: absolute;
    top: 10px;
    right: 10px;
}
.info {
    margin: 20px;
    display: flex;
    justify-content: flex-start;
}
.infoImg {
    width: 76px;
    height: 76px;
}
.infoImgs {
    width: 76px;
    height: 76px;
}
.infoOther {
    margin-left: 20px;
    margin-top: 15px;
}
.theName {
    width: 100%;
    height: 44px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.price {
    color: #ff0000;
    font-size: 15px;
}
.invited {
    color: #606266;
}
.bugNum {
    display: flex;
    justify-content: space-between;
    margin: 5px 20px;
}
.tit {
    font-size: 14px;
    color: #373c45;
}
.board {
    display: flex;
    justify-content: flex-start;
    width: 107px;
    height: 31px;
    line-height: 30px;
    border-radius: 4px 4px 4px 4px;
    background-color: rgba(255, 255, 255, 1);
    text-align: center;
    border: 1px solid rgba(220, 223, 230, 1);
}
.value {
    width: 100px;
    height: 31px;
    line-height: 31px;
    text-align: center;
}
.action {
    width: 100px;
    height: 31px;
    line-height: 30px;
    border-radius: 4px 0px 0px 4px;
    background-color: rgba(245, 247, 250, 1);
    text-align: center;
}
.btn {
    width: 88%;
    margin-top: 15px;
    border-radius: 30px;
    border: none;
}
.none {
    width: 88%;
    margin-top: 15px;
    color: #ffffff;
    background-color: #bababa;
    border-radius: 30px;
    border: none;
}
