.lovecar {
    width: 100%;
    height: 95px;
    background: #ffffff;
    margin-bottom: 10px;
    box-sizing: border-box;
    padding: 5px 20px;
    overflow: hidden;
    display: flex;
    justify-content: left;
}
.caricon {
    width: 60px;
    height: 60px;
}
.caricon image {
    width: 60px;
    height: 60px;
    border-radius: 100%;
}
.carinformation {
    height: 80px;
    font-size: 14px;
    color: #101010;
    margin-left: 20px;
}
.carinformation view:nth-child(2) {
    margin-top: 5px;
    font-size: 12px;
}
.carinformation view:nth-child(3) {
    margin-top: 5px;
}
.carname {
    color: black;
    font-size: 15px;
    font-weight: 600;
}
.addobd {
    position: fixed;
    width: 90%;
    height: 40px;
    bottom: 25px;
    left: 5%;
    line-height: 40px;
    border-radius: 5px;
    background-color: rgba(97, 184, 168, 1);
    color: rgba(255, 255, 255, 1);
    font-size: 14px;
    text-align: center;
    font-family: Roboto;
}
