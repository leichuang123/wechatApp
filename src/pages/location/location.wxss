.letter-search {
    position: fixed;
    width: 30rppx;
    right: 10rpx;
    margin-top: 40rpx;
    text-align: center;
    font-size: 14px;
    top: 50%;
    transform: translateY(-50%);
    z-index: 99;
}

.letter-margin {
    margin-top: 0.3em;
    margin-bottom: 0.3em;
}

.city-margin {
    margin-top: 0.3em;
    margin-bottom: 0.3em;
}

.show-letter {
    width: 160rpx;
    height: 160rpx;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 50%;
    line-height: 160rpx;
    text-align: center;
    font-size: 10vw;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 999;
    color: #fff;
}

.searchbar-result {
    position: fixed;
    width: 100%;
    height: 90%;
    left: 0;
    margin-top: 0;
    font-size: 14px;
    z-index: 9999;
}

.placeholder {
    margin: 5px;
    padding: 0 10px;
    text-align: center;
    height: 2em;
    line-height: 2em;
    border: 1px solid #d9d9d9;
    border-radius: 4px;
}

.hot-city {
    display: -webkit-flex;
    display: flex;
    flex-wrap: wrap;
    padding: 5px 8px;
    background: #fff;
}

.hot-city__item {
    flex: 1 1 20%;
    flex-grow: 1;
    text-align: center;
    height: 70rpx;
    line-height: 70rpx;
    background: #f5f5f5;
    border-radius: 0;
    margin: 5px;
    font-size: 0.9em;
}

button[type="primary"][plain].setting-btn {
    border: none;
    margin-left: 20rpx;
    vertical-align: middle;
}
