.weui-cell:before {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: none;
    color: #d9d9d9;
    left: 15px;
}
.weui-select {
    border-right: none;
}
.bg-white {
