<view wx:if="{{!loading}}">
    <view class="coupon-body">
        <view class='sherable-bg'>
            <image src="../../assets/images/sharable-topbg.png" mode='aspectFit'></image>
            <view class='sharable-cont'>
                <view class='fs18'>{{coupon.name}}</view>
                <view class='fs24 fc-orange bold'>￥{{coupon.deduction_money}}</view>
            </view>
        </view>
        <view class='activity-cont fc-white'>
            <view class='text-center marb20'>活动期限：{{coupon.start_time}}至{{coupon.end_time}}</view>
            <view class='fc-lightgrey weui-flex'>
                <view>优惠说明： </view>
                <view class='weui-flex__item break'>
                    <block wx:for="{{coupon.instructions}}" wx:key="index">
                        <view>{{item}}</view>
                    </block>
                </view>
            </view>
            <view class='fc-lightgrey'>可分享次数：{{coupon.share_times}}次</view>
            <view class='fc-lightgrey' wx:if="{{coupon.award_coupon_name!==''}}">分享奖励：{{coupon.award_coupon_name}}</view>
        </view>
        <view class='exlpain-content'>说明：达到分享数量后可进行奖励，同一个活动不会进行重复奖励</view>
        <view class='button-sp-area'>
            <button class="weui-btn" type="primary" wx:if="{{form.type==1}}" open-type='share'>分享给好友</button>
            <button class="weui-btn" type="default" wx:if="{{form.type==2}}" disabled="true" open-type='share'>已分享</button>
        </view>
    </view>
    <view class='weui-cells fs14'>
        <view class="weui-cell">
            <view class="weui-cell__bd marl8"> 服务门店：{{coupon.store_name}} </view>
            <view class="weui-cell__ft">
                <text class='icon-home2 grey'></text>
            </view>
        </view>
        <view class="weui-cell" bindtap="openLocation">
            <view class="weui-cell__bd marl8">门店地址：{{coupon.store_address}}</view>
            <view class="weui-cell__ft">
                <text class='icon-map-marker grey'></text>
            </view>
        </view>
        <view data-tel="{{coupon.tel}}" class="weui-cell weui-cells_after-title" bindtap="call">
            <view class="weui-cell__bd marl8">
                门店电话：{{coupon.tel}}</view>
            <view class="weui-cell__ft">
                <text class='icon-phone grey'></text>
            </view>
        </view>
    </view>
    <view class='bg-white fs14 padb20'>
        <view class='center-title'>领取记录</view>
        <view wx:if="{{!!coupon.get_record&&coupon.get_record.length>0}}">
            <block wx:for="{{coupon.get_record}}" wx:key="index">
                <view class="weui-cells weui-cells_after-title fs14">
                    <view class="weui-cell">
                        <view class="weui-cell__hd member-face">
                            <image src="{{item.receiver_avatar}}"></image>
                        </view>
                        <view class="weui-cell__bd">{{item.receiver_nick_name}}</view>
                        <view class="weui-cell__ft grey">{{item.get_time}}</view>
                    </view>
                </view>
            </block>
        </view>
        <view class='text-center grey' wx:else>暂无领取记录</view>
    </view>

</view>
<loading wx:if="{{loading}}">加载中</loading>


















