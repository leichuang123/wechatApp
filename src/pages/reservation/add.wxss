.star-hidden {
    opacity: 0;
}

.dialog_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}

.dialog_box {
    width: 650rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 1001;
    background: #fff;
    margin: -150px 50rpx 0 50rpx;
    border-radius: 3px;
}

.dialog_title {
    padding: 15px;
    font: 20px "microsoft yahei";
    text-align: center;
}

.dialog_content {
    height: 210px;
    overflow-y: scroll;
}
