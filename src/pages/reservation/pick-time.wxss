.hollow-rectangle {
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
    border: 4rpx solid red;
    border-radius: 10rpx;
    vertical-align: middle;
}

.solid-rectangle {
    display: inline-block;
    width: 48rpx;
    height: 48rpx;
    margin-right: 10rpx;
    border-radius: 10rpx;
    background-color: red;
    vertical-align: middle;
}

.reserve-top {
    margin-top: 20rpx;
    padding: 10rpx 30rpx;
}

.time-point {
    width: 30%;
    padding: 16rpx 0;
    text-align: center;
    margin-top: 20rpx;
    margin-left: 10rpx;
    margin-right: 10rpx;
    float: left;
    background: #fff;
}

.time-red {
    background: red;
    color: #fff;
}

.text-black {
    color: #000;
}

.times {
    padding: 10px 10px 10px 15px;
}

.scroll-view__container {
    width: 100%;
    background-color: #f5f5f5;
    padding: 20rpx 0;
    white-space: nowrap;
}

.scroll-view-item {
    display: inline-block;
    padding: 6rpx 6rpx;
    line-height: 40rpx;
    color: #353535;
    margin-right: 8rpx;
    background-color: #fff;
    margin-left: 8rpx;
    font-size: 28rpx;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    border-radius: 4rpx;
    border: 1px solid #ccc;
}

.scroll-view-item__active {
    color: #e60103;
    border: 1px solid #e60103;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.weui-grid {
    position: relative;
    float: left;
    padding: 5px 10px;
    width: 33.33333333%;
    box-sizing: border-box;
    border: none;
    border-right: 5px solid #f4f4f4;
    border-bottom: 5px solid #f4f4f4;
}
