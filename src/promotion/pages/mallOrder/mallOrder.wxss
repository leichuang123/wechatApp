.box {
    width: 95%;
    box-sizing: border-box;
    margin: 13px auto;
    background-color: #ffffff;
    border-radius: 10px;
    padding: 15px;
    display: flex;
    justify-content: flex-start;
}
.small {
    width: 30px;
    height: 30px;
}
.boxInfo {
    margin-left: 10px;
    width: 100%;
}
.phone {
    color: #929292;
    margin-left: 10px;
    font-size: 14px;
}
.address {
    font-size: 14px;
    color: #373c45;
    margin-top: 5px;
}
.boxed {
    width: 95%;
    box-sizing: border-box;
    margin: 13px auto;
    background-color: #ffffff;
    border-radius: 10px;
    padding: 15px;
}
.noMargin {
    padding: 0;
    width: 100%;
    margin: 10px auto;
}
.boxTitle {
    color: #373c45;
    font-size: 14px;
}
.big {
    width: 76px;
    height: 76px;
}
.price {
    display: flex;
    justify-content: space-between;
    margin-top: 10px;
    color: #373c45;
    font-size: 14px;
}

.saleNum {
    color: #929292;
    font-size: 12px;
}
.actionBar {
    width: 100%;
    background-color: #ffffff;
    height: 50px;
    line-height: 30px;
    display: flex;
    justify-content: flex-end;
    box-sizing: border-box;
    padding: 10px 20px;
    position: fixed;
    bottom: 0;
    left: 0;
    border-top: 1px solid #f1f1f1;
}
.actionInfo {
    margin-right: 15px;
    font-size: 12px;
    color: #373c45;
}
.allMoney {
    color: rgba(230, 1, 3, 1);
    font-size: 13px;
}
.pay {
    width: 100px;
    height: 30px;
    line-height: 30px;
    border-radius: 30px;
    background-color: rgba(230, 1, 3, 1);
    color: rgba(255, 255, 255, 1);
    font-size: 14px;
    text-align: center;
    font-family: Roboto;
    border: 1px solid rgba(230, 1, 3, 1);
}
