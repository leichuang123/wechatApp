.box {
    width: 95%;
    box-sizing: border-box;
    margin: 13px auto;
    background-color: #ffffff;
    border-radius: 10px;
    padding: 15px;
}
.actionBar {
    width: 100%;
    background-color: #ffffff;
    height: 50px;
    line-height: 30px;
    display: flex;
    justify-content: flex-end;
    box-sizing: border-box;
    padding: 10px 20px;
    position: fixed;
    bottom: 0;
    left: 0;
    border-top: 1px solid #f1f1f1;
}
.pay {
    width: 100px;
    height: 30px;
    line-height: 30px;
    border-radius: 30px;
    background-color: rgba(230, 1, 3, 1);
    color: rgba(255, 255, 255, 1);
    font-size: 14px;
    text-align: center;
    font-family: Roboto;
    border: 1px solid rgba(230, 1, 3, 1);
}
