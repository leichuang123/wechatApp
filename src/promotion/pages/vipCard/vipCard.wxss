.radio-group {
    background-color: #ffffff;
}
.vip {
    widows: 90%;
    margin: 0 auto;
    padding: 5px 10px;
}
.area {
    display: flex;
    justify-content: flex-start;
    overflow: hidden;
}
.radioMessage {
    width: 85%;
    border-bottom: 1px solid #f1f1f1;
    margin-left: 10px;
    padding-bottom: 10px;
}
.vip:last-child .radioMessage {
    border-bottom: none;
}
.ins {
    color: #929292;
    font-size: 14px;
}
.flex {
    display: flex;
    justify-content: space-between;
}
.vipname {
    color: #101010;
    font-size: 14px;
}
.sale {
    font-size: 12px;
    color: #e60103;
}
.price {
    font-size: 12px;
    color: #607d8b;
    text-decoration: line-through;
}
.total {
    background-color: #ffffff;
    position: fixed;
    width: 100%;
    height: 56px;
    display: flex;
    justify-content: flex-end;
    bottom: 0;
    left: 0;
    line-height: 56px;
    overflow: hidden;
    margin-top: 60px;
}
.all {
    color: #373c45;
    font-size: 12px;
}
.allMoney {
    font-size: 12px;
    color: #e60103;
    margin-left: 5px;
}
.totalButton {
    margin-left: 8px;
    width: 81px;
    height: 33px;
    line-height: 33px;
    border-radius: 30px;
    background-color: rgba(230, 1, 3, 1);
    color: rgba(255, 255, 255, 1);
    font-size: 14px;
    text-align: center;
    font-family: Roboto;
    border: 1px solid rgba(230, 1, 3, 1);
    margin-top: 12px;
    margin-right: 12px;
}
