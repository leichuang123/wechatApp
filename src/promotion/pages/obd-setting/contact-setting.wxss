page {
    padding-bottom: 30px;
}
.tips {
    background: #ffffff;
    font-size: 14px;
    padding: 15px;
    border-bottom: 1px solid #f1f1f1;
}
.title {
    font-weight: 600;
}
.check {
    color: #101010;
    font-size: 14px;
    margin-top: 10px;
    background: #ffffff;
    border-bottom: 1px solid #f1f1f1;
    overflow: hidden;
}
.contact {
    padding: 15px;
    border-bottom: 1px solid #f1f1f1;
    overflow: hidden;
}
.who {
    float: left;
    overflow: hidden;
    font-size: 14px;
    color: #101010;
}
.tel {
    opacity: 0.5;
    font-size: 13px;
}
.del {
    float: right;
    font-size: 14px;
    color: #e51c23;
    height: 42px;
    line-height: 42px;
}
.action {
    margin-top: 58px;
    display: flex;
    justify-content: space-around;
}
.action button {
    width: 150px;
    height: 40px;
    text-align: center;
    line-height: 40px;
    font-size: 14px;
    color: black;
    background: #ffffff;
    border: 1px solid #f1f1f1;
    border-radius: 3px;
}
.action .sure {
    color: #ffffff;
    background: rgba(97, 184, 168, 1);
}
.add {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
    background: #ffffff;
    overflow: hidden;
    overflow-y: scroll;
    padding-bottom: 30px;
}
.check {
    overflow: hidden;
}
.cc {
    float: left;
    width: 30%;
    height: 34px;
    line-height: 34px;
    border-radius: 210px;
    background-color: rgba(244, 243, 243, 1);
    color: rgba(16, 16, 16, 1);
    font-size: 14px;
    text-align: center;
    font-family: Roboto;
    border: 1px solid rgba(16, 16, 16, 0.17);
    margin: 8px 4px;
}
.actives {
    background: #61b8a8;
    color: #ffffff;
}
.input {
    width: 96%;
    height: 40px;
    border-radius: 5px;
    color: rgba(136, 136, 136, 1);
    font-size: 13px;
    border: 1px solid rgba(187, 187, 187, 1);
    margin: 0 auto;
}
.input input {
    width: 100%;
    height: 100%;
    border: none;
    outline: none;
    border-radius: none;
    padding-left: 15px;
    color: #101010;
    font-size: 14px;
}
