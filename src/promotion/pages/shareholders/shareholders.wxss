.welcome {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
}
.slide-image {
    width: 100%;
    height: 100%;
    display: block;
    margin: 0;
    padding: 0;
}
.clear {
    width: 100%;
    height: 40px;
}
.welcome .btn {
    width: 233px;
    height: 40px;
    position: fixed;
    left: 50%;
    margin-left: -116px;
    bottom: 20px;
    line-height: 40px;
    z-index: 999;
    font-size: 16px;
    border-radius: 40px;
    background-color: #ffede1;
    color: #f8461f;
}
