.welcome {
    width: 100%;
    height: 100%;
    position: relative;
}
.slide-image {
    width: 100%;
    height: 100%;
    display: block;
    margin: 0;
    padding: 0;
}
.clear {
    width: 100%;
    height: 40px;
}
.welcome .btn {
    width: 233px;
    height: 40px;
    position: fixed;
    left: 50%;
    margin-left: -116px;
    bottom: 20px;
    line-height: 40px;
    z-index: 999;
    font-size: 16px;
    border-radius: 40px;
}
.write {
    height: 600px;
    overflow: hidden;
    background: #f4f3f3;
}
.writetop {
    width: 100%;
    height: 150px;
    background: #E60103;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
}
.upload {
    width: 80px;
    height: 80px;
    border-radius: 100px;
    overflow: hidden;
    text-align: center;
    background: #ffffff;
    font-size: 12px;
    color: #101010;
}
.userimg {
    width: 80px;
    height: 80px;
    border-radius: 100px;
}
.upload image {
    width: 30px;
    height: 30px;
    margin-top: 12px;
}
.writebox {
    padding: 12px;
}
.boxpancel {
    font-size: 14px;
    color: #101010;
    margin-top: 8px;
}
.boxpancel text {
    color: #e51c23;
}
.boxinput {
    width: 100%;
    height: 30px;
    line-height: 20px;
    background-color: rgba(255, 255, 255, 1);
    border: 1px solid rgba(255, 255, 255, 1);
    margin-top: 8px;
    position: relative;
}
.boxinput input {
    width: 100%;
    height: 100%;
    font-size: 14px;
    color: #101010;
    padding-left: 2px;
}
.boxinput .iconfont {
    width: 24px;
    height: 24px;
    text-align: center;
    line-height: 24px;
    position: absolute;
    top: 50%;
    margin-top: -12px;
    right: 5px;
    z-index: 999;
    color: #101010;
    font-size: 18px;
}
.sure {
    position: fixed;
    width: 90%;
    height: 40px;
    bottom: 25px;
    left: 5%;
    line-height: 40px;
    border-radius: 5px;
    background-color: rgba(97, 184, 168, 1);
    color: rgba(255, 255, 255, 1);
    font-size: 14px;
    text-align: center;
    font-family: Roboto;
}
