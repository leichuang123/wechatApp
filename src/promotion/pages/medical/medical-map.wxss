#myMap {
    width: 100%;
    z-index:999;
}
.boxbar {
    padding-top: 10px;
    position: fixed;
    bottom: 10px;
    left: 50%;
    width: 333px;
    height: 59px;
    margin-left: -167px;
    line-height: 20px;
    border-radius: 30px;
    text-align: center;
    z-index: 9999;
    background: white;
    display: flex;
    justify-content: space-around;
}
.round {
    width: 64px;
    height: 69px;
    text-align: center;
    border-radius: 100%;
    font-size: 12px;
    box-sizing: border-box;
    position: absolute;
    top: 0;
    left: 50%;
    margin-left: -32px;
    text-align: center;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    background: #E60103;
    color: white;
}
.bars {
    font-size: 12px;
    color: #101010;
    text-align: center;
}
.bars .iconfont {
    width: 28px;
    height: 28px;
    font-size: 28px;
    color: #101010;
    text-align: center;
    line-height: 28px;
    margin: 0 auto;
}
.sz {
    position: fixed;
    z-index: 9999;
    width: 32px;
    height: 32px;
    border-radius: 5px;
    text-align: center;
    line-height: 32px;
    top: 35px;
    right: 13px;
    background: white;
}
.sz .iconfont {
    width: 100%;
    height: 100%;
    font-size: 28px;
    color: #101010;
    text-align: center;
    line-height: 32px;
}
.icon1 {
    top: 80px;
}

.icon2 {
    top: 125px;
}
.icon3 {
    top: 170px;
}
.icon1 .iconfont {
    color: #3f51b5;
}
.icon2 .iconfont {
    color: #ea9518;
}
.icon3 .iconfont {
    color: red;
}
