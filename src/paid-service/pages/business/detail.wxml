                        <block wx:for="{{5}}" wx:for-item="it" wx:for-index="i" wx:key="i">
                            <text wx:if="{{item.star<it+0.5}}" class="icon-star-full light-grey"></text>
                            <text wx:if="{{item.star>=it+0.5&&item.star<it+1}}" class="icon-star-half fc-orange"></text>
                            <text wx:if="{{item.star>=it+1}}" class="icon-star-full fc-orange"></text>
                        </block>
                        <view>{{item.content}}</view>
                        <view class="weui-uploader__bd">
                            <view class="weui-uploader__file">
                                <block wx:for="{{item.pic_url}}" wx:for-item="img" wx:for-index="idx" wx:key="idx">
                                    <image class="weui-uploader__img" src="{{img.url}}" mode="aspectFill" />
                                </block>
                            </view>
                        </view>
                        <view class="weui-flex">
                            <block wx:for="{{item.reply}}" wx:for-item="it" wx:for-index="idx" wx:key="idx">
                                <view class="weui-flex__item">{{it.content}}</view>
                                <view class='grey'>{{it.create_time}}</view>
                            </block>
                        </view>
                    </view>
                </block> -->
                <template is="evaluations" data="{{evaluations}}" />
            </view>
        </view>
    </view>
    <view class="bottom-btn text-right">
        <view class="rank-cell">
            <button class="weui-btn mini-btn btn-margin" type="primary" size="mini" bindtap="gotoBusinessHandle">
                立即办理
            </button>
        </view>
    </view>
</view>
